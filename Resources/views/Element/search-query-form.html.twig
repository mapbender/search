<div class="ui-tabs">
    <ul>
        <li>
            <a href="#sqm-general">Allgemein</a>
        </li>
        <li>
            <a href="#sqm-fields">Felder</a>
        </li>
        <li>
            <a href="#sqm-conditions">Bedingungen</a>
        </li>
    </ul>
    <div id="sqm-general">
        <div style="padding: 10px;">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" type="text" required="required" class="form-control" placeholder="Eindeutiger Name">
            </div>
            <div class="form-group select-container">
                <label for="schemaId">Schema (Objekttyp)</label>
                <select class="form-control" name="schemaId"></select>
            </div>
            <div class="form-group select-container">
                <label for="styleMap">Kartenstil</label>
                <div class="input-group input-group-sm">
                    <select class="form-control" name="styleMap"></select>
                    <div class="input-group-btn">
                        <span class="btn button -fn-edit-stylemap" title="Ändern">Ändern</span>
                    </div>
                </div>
            </div>
            <div class="form-group checkbox"><label for="extendOnly"><input type="checkbox" name="extendOnly" checked="checked">Nur Kartenausschnitt</label></div>
            <div class="form-group checkbox"><label for="exportOnly"><input type="checkbox" name="exportOnly">Nur Export</label></div>
        </div>
    </div>
    <div id="sqm-fields">
        <div style="padding: 10px;">
            <table class="-js-fields-collection table table-striped table-hover table-condensed">
                <thead></thead>
                <tbody></tbody>
            </table>
            <span class="button btn -fn-add-field">Neues Feld</span>
        </div>
    </div>
    <div id="sqm-conditions">
        <div style="padding: 10px;">
            <table class="-js-conditions-collection table table-striped table-hover table-condensed">
                <thead></thead>
                <tbody></tbody>
            </table>
            <span class="button btn -fn-add-condition">Neue Bedingung</span>
        </div>
    </div>
</div>
<div class="-tpl-field-form" style="display:none;">
    <div class="form-group">
        <label for="fieldName">Feld</label>
        <select name="fieldName" class="form-control" required="required"></select>
    </div>
</div>
<div class="-tpl-condition-form" style="display:none;">
    <div class="row">
        <div class="form-group col-sm-5 col-5">
            <label for="fieldName">Feld</label>
            <select name="fieldName" class="form-control" required="required"></select>
        </div>
        <div class="form-group col-sm-3 col-3 -js-operator-field">
            <label for="operator">Operator</label>
            <select name="operator" class="form-control" required="required"></select>
        </div>
        <div class="form-group col-sm-4 col-4">
            <label for="value"></label>
            <select class="form-control -js-value-choice" required="required" style="display: none;"></select>
            <input type="text" class="form-control -js-value-text" required="required" style="display: none;">
        </div>
    </div>
</div>
